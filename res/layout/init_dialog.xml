<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
       
	<LinearLayout 
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:background="@layout/repeatingbg"
              >
	    <ScrollView
	    	android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrolltext"
            android:layout_weight="1">
            <LinearLayout
            	android:layout_width="fill_parent"
              	android:layout_height="wrap_content">
			    <TextView android:id="@+id/inittext"
				              android:layout_width="wrap_content"
				              android:layout_height="wrap_content"
				              android:textColor="#FFF"
				              android:textSize="12px"/>
			</LinearLayout>
		</ScrollView>
		<Button android:layout_width="fill_parent"
        android:layout_height="25dp" android:id="@+id/initbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5px"
        android:text="close" android:layout_below="@id/scrolltext"
        android:background="@layout/button" android:textColor="#000000" />
	</LinearLayout>	
	
	
</RelativeLayout>

