<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/noisebg"
    >
    <RelativeLayout  
    	android:id="@+id/astitle"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="42dp"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/title_gradient">
	    <RelativeLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="fill_parent">
	    	<!-- 
	    	<ImageView
				android:id="@+id/titleicon"
				android:layout_width="wrap_content"
				android:layout_height="40px"
				android:paddingLeft="25px"
				android:src="@drawable/titleicon"/>
			-->
		    <TextView android:layout_width="wrap_content"
		        android:layout_height="42dp" android:id="@+id/title"
		        android:text="[android swim]" 
		        android:textColor="#eaeaea"
		        android:paddingLeft="13px"
		        android:paddingBottom="8dp"
		        android:gravity="bottom"
		        android:textSize="16dp"
		        android:textStyle="normal"
		        android:shadowColor="#aa000000"
				android:shadowDx="-3.0"
				android:shadowDy="2.0"
				android:shadowRadius="1.0"/>
			
		</RelativeLayout>
	    <LinearLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="horizontal"
	    	android:gravity="right">
		
			<ImageView
				android:id="@+id/vdiv"
				android:layout_width="5dp"
				android:layout_height="42dp"
				android:paddingRight="3dp"
				android:paddingTop="5dp"
				android:src="@drawable/vdivider"
				/>
				
			<ImageButton
				android:id="@+id/lst"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:paddingRight="5dp"
				android:paddingLeft="2dp"
				android:gravity="center"
				android:src="@drawable/homepixel"
				android:background="@null"
				/>
				
			<ImageView
				android:id="@+id/vdiv"
				android:layout_width="5dp"
				android:layout_height="42dp"
				android:paddingRight="3dp"
				android:paddingTop="5dp"
				android:src="@drawable/vdivider"
				/>
			<ImageButton
				android:id="@+id/rep"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:paddingRight="3dp"
				android:paddingLeft="2dp"
				android:gravity="center"
				android:src="@drawable/messagepixel"
				android:background="@null"
				/>
		</LinearLayout>
    </RelativeLayout>
    <TableLayout
    	android:id="@+id/profile"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/astitle"
		android:stretchColumns="0,1"
		android:paddingTop="12dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		
	    		<ImageButton 
	    			android:background="@null" 
	    			android:id="@+id/user_icon" 
	    			android:layout_height="wrap_content" 
	    			android:layout_width="wrap_content" 
	    			android:src="@drawable/unknown_image"></ImageButton>
			</RelativeLayout>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
			</RelativeLayout>
		</TableRow>
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/tv" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
	    	<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/username" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
		</TableRow>
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/tv" 
	    			android:text="email" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
	    	<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/useremail" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
		</TableRow>
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/tv" 
	    			android:text="registration date" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
	    	<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/userreg" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
		</TableRow>
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/tv" 
	    			android:text="last visit" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
	    	<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/userlast" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
		</TableRow>
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/tv" 
	    			android:text="post count" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
	    	<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/userposts" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
		</TableRow>
		<TableRow>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/tv" 
	    			android:text="kudos" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
	    	<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
	    		<TextView 
	    			android:textSize="14dp" 
	    			android:id="@+id/userkudos" 
	    			android:text="user" 
	    			android:gravity="bottom|left" 
	    			android:layout_height="wrap_content"
	    			android:layout_width="fill_parent"  
	    			android:textColor="#363636" 
	    			android:paddingTop="5dp"
	    			></TextView>
	    	</RelativeLayout>
		</TableRow>
		<TableRow android:paddingTop="22dp">
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
               	<Button 
               		android:id="@+id/sendpm"
               		android:text="Send PM"
               		android:textColor="#363636"
               		android:paddingLeft="10dp"
               		android:paddingRight="10dp"
               		android:background="@layout/button"
               		android:layout_height="35dp"
               		android:gravity="center"
               		android:layout_width="wrap_content"/>
            </RelativeLayout>
			<RelativeLayout
	    		android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button 
               		android:id="@+id/viewtracker"
               		android:text="View Tracker"
               		android:textColor="#363636"
              		android:paddingLeft="10dp"
               		android:paddingRight="10dp"
               		android:background="@layout/button"
               		android:gravity="center"
               		android:layout_height="35dp"
               		android:layout_width="wrap_content"/>
            </RelativeLayout>
		</TableRow>
	</TableLayout>
</RelativeLayout>